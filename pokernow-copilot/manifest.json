{
  "manifest_version": 3,
  "name": "PokerNow GTO Copilot",
  "version": "2.7",
  "description": "Real-time GTO poker advice with Monte Carlo realism for PokerNow.com",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.pokernow.club/*",
    "https://pokernow.club/*",
    "https://*.pokernow.club/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pokernow.club/*",
        "https://pokernow.club/*", 
        "https://*.pokernow.club/*"
      ],
      "js": [
        "js/poker-engine.js",
        "js/equity-calculator.js", 
        "js/gto-advisor.js",
        "js/pokernow-parser.js",
        "js/copilot-ui.js",
        "js/content.js"
      ],
      "css": ["css/copilot.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }
} 